<h1>Failed Charges</h1>
<table class="failed">
  <tbody>
    <%= render @charges_failed %>
  </tbody>
</table>

<h1>Disputed Charges</h1>
<table class="disputed">
  <tbody>
    <%= render @charges_disputed %>
  </tbody>
</table>

<h1>Successful Charges</h1>
<table class="paid">
  <tbody>
    <%= render @charges_paid %>
  </tbody>
</table>


<%
=begin%>
 <p id="notice"><%= notice %></p>

<h1>Charges</h1>

<table>
  <thead>
    <tr>
      <th>Paid</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Refunded</th>
      <th>Customer</th>
      <th>Disputed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.paid %></td>
        <td><%= charge.amount %></td>
        <td><%= charge.currency %></td>
        <td><%= charge.refunded %></td>
        <td><%= charge.customer_id %></td>
        <td><%= charge.disputed %></td>
        <td><%= link_to 'Show', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Charge', new_charge_path %> 
<%
=end%>
